<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".New_Trip.Companions">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/ic_action_back_orange"
        android:layout_margin="10dp"
        android:id="@+id/back"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/companions"
        android:id="@+id/companions"
        android:layout_below="@+id/back"
        android:layout_alignParentEnd="true"
        android:textSize="45sp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginRight="30dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@+id/companions"
        android:src="@drawable/hanging"
        android:layout_margin="10dp"
        android:id="@+id/hanging"
        android:contentDescription="@null"/>

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/hanging"
        android:layout_above="@+id/fab"
        android:id="@+id/recyclerView"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@null"
        android:layout_below="@+id/recyclerView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_action_dot"/>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        app:fabSize="auto"
        android:id="@+id/fab"
        app:backgroundTint="@color/colorPrimaryDark"
        android:src="@drawable/ic_action_forward_white"
        android:layout_alignParentRight="true" />
</RelativeLayout>